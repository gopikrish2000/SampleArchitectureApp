<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/light_gray"
                                             tools:context=".animations.TransitionFirstFragment">

    <TextView android:id="@+id/align_firsttv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintBottom_toTopOf="@+id/firstEt"
              android:layout_marginBottom="50dp"
        android:text="firsttext"
        />
    <EditText
        android:id="@+id/firstEt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="First Edittv"
        android:lines="1"
        android:maxLength="20"
        android:singleLine="true"
        android:textColor="#000000"
        android:textColorHint="#66000000"
        app:layout_constraintBottom_toTopOf="@+id/align_1"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView android:id="@+id/align_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/align_2"
        android:text="1"
        android:layout_marginBottom="20dp"
        />
    <TextView android:id="@+id/align_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/align_3"
        android:text="2"
        android:layout_marginBottom="20dp"
        />
    <TextView android:id="@+id/align_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/align_4"
        android:text="3"
        android:layout_marginBottom="20dp"
        />
    <TextView android:id="@+id/align_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/align_5"
        android:text="4"
        android:layout_marginBottom="100dp"
        />
    <TextView android:id="@+id/align_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/lastEt"
        android:text="5"
        android:layout_marginBottom="10dp"
        />


    <EditText
        android:id="@+id/lastEt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="8dp"
        android:hint="Enter Name"
        android:lines="1"
        android:maxLength="20"
        android:singleLine="true"
        android:textColor="#000000"
        android:textColorHint="#66000000"
        app:layout_constraintBottom_toTopOf="@+id/nextBtnn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/nextBtnn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="click next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</android.support.constraint.ConstraintLayout>