<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="liveDataBottomVM"
            type="com.gopi.architecture.sample.samplearchitectureapp.livedatalatest.LiveDataBottomVM"/>
    </data>

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/bottomPortionCenterTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{liveDataBottomVM.secondData}"
            android:textColor="#142031"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:id="@+id/bottomPortionLeftTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{liveDataBottomVM.firstData}"
            android:textColor="#142031"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:id="@+id/bottomPortionRightTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{liveDataBottomVM.thirdData}"
            android:textColor="#142031"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

    </android.support.constraint.ConstraintLayout>
</layout>